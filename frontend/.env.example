# ============================================================================
# FRONTEND ENVIRONMENT CONFIGURATION
# ShopHub E-Commerce Platform (Vite + React)
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# ============================================================================
# Note: All Vite environment variables must be prefixed with VITE_
# See: https://vitejs.dev/guide/env-and-mode.html
# ============================================================================

# ============================================================================
# API CONFIGURATION (Required)
# ============================================================================
# Backend API URL - change to your backend server URL
VITE_API_URL=http://localhost:8000/api/v1

# Alternative: Full backend base URL (without /api/v1)
VITE_BACKEND_URL=http://localhost:8000

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Application name displayed in the UI
VITE_APP_NAME=ShopHub

# Application version
VITE_APP_VERSION=1.0.0

# Environment: development, staging, production
VITE_APP_ENV=development

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================
# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false

# ============================================================================
# THIRD-PARTY SERVICES (Optional)
# ============================================================================
# Stripe public key (for payment processing)
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Google Analytics ID
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry DSN (for error tracking)
# VITE_SENTRY_DSN=https://your-sentry-dsn

# ============================================================================
# IMAGE/ASSET CONFIGURATION (Optional)
# ============================================================================
# CDN URL for static assets (leave empty for local)
# VITE_CDN_URL=https://cdn.yourstore.com

# Default product image placeholder
VITE_DEFAULT_PRODUCT_IMAGE=/images/placeholder.jpg

# ============================================================================
# PAGINATION & UI SETTINGS (Optional)
# ============================================================================
# Default items per page
VITE_DEFAULT_PAGE_SIZE=12

# Maximum items per page
VITE_MAX_PAGE_SIZE=48
