# ============================================================================
# BACKEND ENVIRONMENT CONFIGURATION
# Neatify - Cleaning Supplies & Tools Platform
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION (Required)
# ============================================================================
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://ecommerce_user:your_secure_password@localhost:5432/ecommerce

# Alternative: Individual database settings (optional, DATABASE_URL takes precedence)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce
DB_USER=ecommerce_user
DB_PASSWORD=your_secure_password

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================================================
# SECURITY & AUTHENTICATION (Required)
# ============================================================================
# Generate a secure secret key with:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your_super_secret_key_change_in_production_min_32_chars

# JWT Algorithm (default: HS256)
ALGORITHM=HS256

# Token expiration settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Session secret for cookie-based sessions
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET=your_session_secret_key

# ============================================================================
# CORS CONFIGURATION (Required for development)
# ============================================================================
# Comma-separated list of allowed origins (no spaces)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Neatify - Cleaning Supplies & Tools
APP_VERSION=1.0.0

# Debug mode (set to False in production!)
DEBUG=True

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Environment: development, staging, production
ENVIRONMENT=development

# API prefix
API_V1_PREFIX=/api/v1
API_V1_STR=/api/v1

# Documentation URLs (set to empty string to disable in production)
DOCS_URL=/docs
REDOC_URL=/redoc

# Timezone
TIMEZONE=UTC

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
# Directory for uploaded files (relative to backend root)
UPLOAD_DIR=uploads/products

# Maximum file size in bytes (default: 5MB = 5242880)
MAX_FILE_SIZE=5242880

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp

# ============================================================================
# ADMIN USER CONFIGURATION
# ============================================================================
# Default admin credentials (for initial setup)
ADMIN_EMAIL=admin@yourstore.com
ADMIN_USERNAME=admin

# Pre-hashed password for admin
# Generate with: python -c "from passlib.context import CryptContext; print(CryptContext(schemes=['bcrypt']).hash('your_password'))"
# Default hash below is for password: "admin123" - CHANGE IN PRODUCTION!
ADMIN_PASSWORD_HASH=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5isl.xMUTWq3u

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_COOKIE_NAME=ecommerce_session

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# EMAIL CONFIGURATION (Optional - for order notifications)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@yourstore.com

# ============================================================================
# PAYMENT GATEWAY CONFIGURATION (Optional)
# ============================================================================
# Stripe Configuration
# Get keys from: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
# Get credentials from: https://developer.paypal.com/
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_SECRET=your_paypal_secret
# PAYPAL_MODE=sandbox  # Use 'live' for production

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching & sessions)
# ============================================================================
# REDIS_URL=redis://localhost:6379/0
# CACHE_ENABLED=False
